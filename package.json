{
  "name": "iris-messenger",
  "version": "2.1.1",
  "license": "MIT",
  "scripts": {
    "start": "sirv build --port 8080 --cors --single",
    "build": "preact build --no-prerender --no-inline-css ",
    "dev": "preact watch --port 8080",
    "lint": "eslint src"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/",
      "src/js/lib/",
      "src/assets",
      "src/static"
    ],
    "overrides": [
      {
        "files": [
          "*"
        ],
        "rules": {
          "react/no-did-mount-set-state": "off",
          "react/no-did-update-set-state": "off",
          "no-useless-escape": "off",
          "radix": "off"
        }
      }
    ]
  },
  "devDependencies": {
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.1.0",
    "eslint": "^7.32.0",
    "eslint-config-preact": "^1.1.4",
    "preact-cli": "^3.2.2",
    "sirv-cli": "1.0.14",
    "webpack-build-notifier": "^2.3.0"
  },
  "dependencies": {
    "@babel/core": "7.x",
    "@babel/runtime": "7.x",
    "@solana/wallet-adapter-react-ui": "^0.9.5",
    "@solana/web3.js": "^1.35.1",
    "@strata-foundation/react": "^3.2.5-bounty.3",
    "@strata-foundation/spl-token-bonding": "^3.2.5-bounty.3",
    "@strata-foundation/spl-token-collective": "^3.2.5-bounty.3",
    "@types/react": "^16.0",
    "@zxing/library": "^0.18.6",
    "antd": "^4.18.8",
    "autolinker": "^3.14.3",
    "gun": "mmalmi/gun#old",
    "htm": "^3.1.0",
    "iris-lib": "^0.0.158",
    "jquery": "^3.6.0",
    "lodash-es": "^4.17.21",
    "net": "^1.0.2",
    "preact": "^10.5.14",
    "preact-render-to-string": "^5.1.19",
    "preact-router": "^3.2.1",
    "preact-scroll-viewport": "^0.2.0",
    "react": "^16.0",
    "react-dom": "^16.0",
    "react-helmet": "^6.1.0",
    "react-virtualized": "^9.22.3",
    "webtorrent": "^1.5.1"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
